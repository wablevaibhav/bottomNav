<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.bottomnav.screens.Home"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.bottomnav.screens.Dashboard"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_notifications"
        tools:layout="@layout/fragment_notification"
        android:name="com.example.bottomnav.screens.Notification"
        android:label="Notifications" />
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.bottomnav.screens.Profile"
        tools:layout="@layout/fragment_profile"
        android:label="Profile" />
</navigation>